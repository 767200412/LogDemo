<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <android.support.constraint.Guideline
        android:id="@+id/gl_v_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_fccn_logo_ban" />

    <Button
        android:id="@+id/bt_log"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/btn_shape_enable"
        android:text="获取验证码"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="@+id/et_PhoneNumber"
        app:layout_constraintStart_toStartOf="@+id/et_PhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/et_PhoneNumber" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="45dp"
        android:text="验证码登录"
        android:textColor="#ff232323"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/nav_ic_delete"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias = "0.1"/>


    <!--输入框 确定国家或者地区-->
    <EditText
        android:id="@+id/erea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="number"
        android:text="国家/地区"
        android:textColor="#ff232323"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <!--输入框 输入手机号-->
    <EditText
        android:id="@+id/et_PhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="number"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/erea"
        app:layout_constraintStart_toStartOf="@+id/erea"
        app:layout_constraintTop_toBottomOf="@+id/erea" />



    <Spinner
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-5dp"
        android:text="中国(+86)"
        android:textColor="#ff232323"
        android:textSize="16sp"
        android:entries="@array/cities_data"
        app:layout_constraintBottom_toBottomOf="@+id/erea"
        app:layout_constraintEnd_toEndOf="@+id/erea"
        app:layout_constraintTop_toTopOf="@+id/erea" />





</android.support.constraint.ConstraintLayout>